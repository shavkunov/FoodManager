<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Edit btns -->
    <ImageButton
        android:id="@+id/menu_settings_day_mealtime_delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <ImageButton
        android:id="@+id/menu_settings_day_mealtime_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="center"
        android:layout_toLeftOf="@id/menu_settings_day_mealtime_delete"
        android:layout_toStartOf="@id/menu_settings_day_mealtime_delete"/>
    <!-- Mealtime name -->
    <TextView
        android:id="@+id/menu_settings_day_mealtime_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/menu_settings_day_mealtime_edit"
        android:layout_toStartOf="@id/menu_settings_day_mealtime_edit"
        android:textSize="15sp"/>
</RelativeLayout>