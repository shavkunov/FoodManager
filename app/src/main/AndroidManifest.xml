<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbau.mit.foodmanager">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CookBookActivity" />
        <activity android:name=".CookBookCategoryActivity" />
        <activity android:name=".RecipeViewActivity" />
        <activity android:name=".ShoppingListActivity" />
        <activity android:name=".MenuViewActivity" />
        <activity android:name=".StepViewActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".MenuSettingsActivity" />
        <activity android:name=".ChooseMealtimePresetActivity" />
        <activity android:name=".MealtimeSettingsActivity"/>
    </application>

</manifest>